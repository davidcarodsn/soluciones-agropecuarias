---
import FormContact from "../components/contact/FormContact";
// import FormContactEmail from "../components/contact/FormContactEmail";
import Layout from "../layouts/Layout.astro";
import PAGES from "../util/pages";
const { RECAPTCHA_KEY, EMAILJS_PUBLIC_KEY, EMAILJS_SERVICE, CONTACT_EMAILJS_TEMPLATE, GOOGLE_MAP_KEY } = await import.meta.env;
---
<Layout path={PAGES.CONTACT_PAGE}>
  <!-- Page Header Section Start Here -->
  <section class="page-header bg_img padding-tb">
    <div class="overlay"></div>
    <div class="container">
        <div class="page-header-content-area">
            <h4 class="ph-title">Contactate con nosotros</h4>
            <ul class="agri-ul">
                <li><a href="index.html">Home</a></li>
                <li><a class="active">Contact Us</a></li>
            </ul>
        </div>
    </div>
  </section>
  <!-- Page Header Section Ending Here -->
  <!-- Contact Us Section Start Here -->
  <div class="contact-section padding-tb">
    <div class="container">
        <div class="contac-top">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-lg-6 col-12">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="icofont-google-map"></i>
                        </div>
                        <div class="contact-details">
                            <p>Gobernador Cresto 1475, Concordia E.R., Argentina.</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6 col-12">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="icofont-phone"></i>
                        </div>
                        <div class="contact-details">
                            <p>+54 0345 421 1515 <br> +54 9 3454 03-7365</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6 col-12">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="icofont-envelope"></i>
                        </div>
                        <div style={{ display: 'flex', alignItems: 'center' }} class="contact-details">
                            <p>info@solucionesagropecuarias.com.ar</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="contac-bottom">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-12">
                    <div class="location-map">
                        <div id="map">
                            
                        </div>
                    </div>
                </div>
                <FormContact keys={{ RECAPTCHA_KEY, EMAILJS_PUBLIC_KEY, EMAILJS_SERVICE, CONTACT_EMAILJS_TEMPLATE }} client:load/>
            </div>
        </div>
    </div>
  </div>
  <!-- Contact Us Section ENding Here -->
  <!-- <FormContactEmail keys={{ RECAPTCHA_KEY, EMAILJS_PUBLIC_KEY, EMAILJS_SERVICE, CONTACT_EMAILJS_TEMPLATE }} client:load/> -->
  <script is:inline src="/assets/js/jquery.js"></script>
  <script is:inline src="/assets/js/fontawesome.min.js"></script>
  <script is:inline src="/assets/js/waypoints.min.js"></script>
  <script is:inline src="/assets/js/bootstrap.min.js"></script>
  <script is:inline src="/assets/js/wow.min.js"></script>
  <script is:inline src="/assets/js/swiper.min.js"></script>
  <script is:inline src="/assets/js/jquery.countdown.min.js"></script>
  <script is:inline src="/assets/js/jquery.counterup.min.js"></script>
  <script is:inline src="/assets/js/isotope.pkgd.min.js"></script>
  <script is:inline src="/assets/js/lightcase.js"></script>
  <script is:inline src="/assets/js/functions.js"></script>
  <script is:inline>
    // Initialize and add the map
    function initMap() {
      // The location of Uluru
      const soluciones = { lat:  -31.38229053556096, lng: -58.01634966576649 };
      // The map, centered at Uluru
      const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 17,
        center: soluciones,
      });
      // The marker, positioned at Uluru
      const marker = new google.maps.Marker({
        position: soluciones,
        map: map,
      });
    }
    window.initMap = initMap;
  </script>
  <script is:inline async defer src={`https://maps.googleapis.com/maps/api/js?key=${GOOGLE_MAP_KEY}&callback=initMap`}
  type="text/javascript"></script>
</Layout>