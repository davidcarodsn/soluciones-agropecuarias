---
const data = [
  {
    title: "Bio Forge",
    class: "fertilizante",
    img: "15.png",
  },
  {
    title: "Mulam 48",
    class: "herbicida",
    img: "02.png",
  },
  {
    title: "Tocon Extra",
    class: "herbicida",
    img: "04.png",
  },
  {
    title: "Preside",
    class: "herbicida",
    img: "05.png",
  },
  {
    title: "Nutrimins",
    class: "fertilizante",
    img: "06.png",
  },
  {
    title: "Nutroplus 18",
    class: "fertilizante",
    img: "07.png",
  },
];
---
<section class="product-section padding-tb">
  <div class="container">
    <div class="section-header wow fadeInUp" data-wow-delay="0.4s">
      <h3>Nuestros productos</h3>
      <p>Productos de la mas alta calidad</p>
    </div>
    <div class="section-wrapper wow fadeInUp" data-wow-delay="0.5s">
      <ul class="agri-ul product-filter-name">
        <li data-filter="*" class="active">Ver todo</li>
        <!-- <li data-filter=".insecticida">Insecticidas</li> -->
        <li data-filter=".herbicida">Herbicidas</li>
        <li data-filter=".fertilizante">Fertilizantes</li>
      </ul>
      <div class="grid">
        {
          data.map((img) => {
              return (
                <div class={`product-item ${img.class}`}>
                  <div class="product-inner">
                    <div class="product-thumb">
                      <img
                        src={`/assets/images/product/${img.img}`}
                        alt="product"
                      />
                    </div>
                    <div class="product-content">
                      <a style="font-size: 25px;" class="product-name">
                        {img.title}
                      </a>
                    </div>
                  </div>
                </div>
              );
            }
          )
        }
      </div>
    </div>
  </div>
</section>
